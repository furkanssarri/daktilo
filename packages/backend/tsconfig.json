{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "src/types/express.d.ts"],
  "exclude": [
    "node_modules",
    "prisma.config.js",
    "prisma.config.js.map",
    "prisma.config.d.ts.map",
    "dist",
    "src/_archive",
    "src/tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
